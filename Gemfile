source 'https://rubygems.org'


gem 'rails', '4.0.0'
gem 'debugger'
gem 'devise'
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

group :development, :test do
	gem 'sqlite3'
	gem 'quiet_assets'
end

group :production do
	gem 'pg'
	gem 'unicorn'
	gem 'rails_12factor'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end